<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SettingFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/setting_return_tv"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:text="返回"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ff007aff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/icon_return" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <TextView
        android:id="@+id/user_info_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableEnd="@mipmap/list_item_indicator"
        android:drawableRight="@mipmap/list_item_indicator"
        android:gravity="center_vertical"
        android:text="基本信息"
        android:textColor="#ff4e5761"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <TextView
        android:id="@+id/change_login_password_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableEnd="@mipmap/list_item_indicator"
        android:drawableRight="@mipmap/list_item_indicator"
        android:gravity="center_vertical"
        android:text="修改登陆密码"
        android:textColor="#ff4e5761"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <TextView
        android:id="@+id/find_login_password_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableEnd="@mipmap/list_item_indicator"
        android:drawableRight="@mipmap/list_item_indicator"
        android:gravity="center_vertical"
        android:text="找回登陆密码"
        android:textColor="#ff4e5761"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#ffededed" />

    <TextView
        android:id="@+id/change_payment_pwd_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableEnd="@mipmap/list_item_indicator"
        android:drawableRight="@mipmap/list_item_indicator"
        android:gravity="center_vertical"
        android:text="修改支付密码"
        android:textColor="#ff4e5761"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#ffededed" />

    <TextView
        android:id="@+id/update_app"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableEnd="@mipmap/list_item_indicator"
        android:drawableRight="@mipmap/list_item_indicator"
        android:gravity="center_vertical"
        android:text="检查新版本"
        android:textColor="#ff4e5761"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />
    <TextView
        android:id="@+id/version_name"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="56dp"
        android:text="当前版本"
        android:textColor="#4e5761"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

</LinearLayout>