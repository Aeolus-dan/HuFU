<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/put_forward_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提现"
            android:textColor="#ff5e5e5e"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/put_forward_close_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:padding="0dp"
            android:src="@drawable/close_drwable" />

    </FrameLayout>

    <TextView
        android:layout_width="91dp"
        android:layout_height="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="请选择提现类型"
        android:textColor="#ff7b7b7b"
        android:textSize="13sp" />

    <RadioGroup
        android:id="@+id/put_forward_type_rg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#fff0f2f3"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/gold_account_rg"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:background="#fff0f2f3"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/putforward_drawable"
            android:text="金本币账户"
            android:textColor="@color/putforward_radio_button_text_color"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/cny_rg"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="24dp"
            android:background="#fff0f2f3"
            android:button="@null"
            android:drawableRight="@drawable/putforward_drawable"
            android:text="积分账户"
            android:textColor="@color/putforward_radio_button_text_color"
            android:textSize="16sp" />

    </RadioGroup>

    <TextView
        android:layout_width="78dp"
        android:layout_height="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="24dp"
        android:text="输入提现金额"
        android:textColor="#ff75787b"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/put_forward_num_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/hint_put_number"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/hit_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textColor="#ff75787b"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/hit_advance_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textColor="@color/colorRevokeBtn"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/hit_cost_forward_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:text="注意：提前提现将扣除20%的手续费"
        android:gravity="center"
        android:textColor="@color/colorRevokeBtn"
        android:textSize="12sp" />
    <Button
        android:id="@+id/put_forward__btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_shape"
        android:text="确认提现"
        android:textColor="#ffffff" />
</LinearLayout>