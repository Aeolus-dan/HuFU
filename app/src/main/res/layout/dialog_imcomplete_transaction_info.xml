<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/now_gold_price_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="今日平均金价"
        android:textColor="@color/transactionHitColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="订单详情" />

    <TextView
        android:id="@+id/gold_num_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="金本币数"
        android:textColor="@color/transactionHitColor" />

    <TextView
        android:id="@+id/inter_gold_price_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="金本币单价" />

    <TextView
        android:id="@+id/order_price_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="订单金额"
        android:textColor="@color/transactionHitColor" />

    <TextView
        android:id="@+id/order_seller_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="订单发起人" />


    <TextView
        android:id="@+id/order_num_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="订单号" />

    <TextView
        android:id="@+id/tran_mode_tv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="交易类型" />


    <TextView
        android:id="@+id/order_note_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minLines="3"
        android:text="订单备注" />

    <Button
        android:id="@+id/revoke_tran_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="撤销" />

</LinearLayout>