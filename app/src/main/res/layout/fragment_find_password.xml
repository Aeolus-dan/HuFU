<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.PaymentPasswordFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="找回登录密码"
            android:textColor="#ff000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/modify_password_return_tv"
            android:layout_width="103dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:text="返回"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ff007aff"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/icon_return" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="手机号码："
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:textColor="#7B7B7B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone_et"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:inputType="phone"
            android:textColor="#080808"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/verif_code_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="@string/send_verif"
            android:textAllCaps="false"
            android:textColor="@color/text_blue"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="#D6D6D6" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_weight="4">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/verif_code_et"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:hint="@string/input_verifi"
                android:inputType="number"
                android:textAllCaps="false"
                android:textColorHint="#7B7B7B" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"

            android:text="新密码"
            android:textColor="#ff85898e"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/new_password_et"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:textColor="#ff4e5761"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"

            android:text="新密码确认"
            android:textColor="#ff85898e"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirm_password_et"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:textColor="#ff4e5761"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#ffededed" />

    <Button
        android:id="@+id/confirm_change_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/login_shape"
        android:text="确认修改"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>