<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/issue_trade_return_tv"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:clickable="true"
            android:drawableStart="@mipmap/icon_return"
            android:drawableLeft="@mipmap/icon_return"
            android:drawablePadding="6dp"
            android:focusable="true"
            android:gravity="center"
            android:text="返回"
            android:textColor="#007AFF"
            android:textSize="17sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/issue_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center|center_vertical"
            app:tabIndicatorColor="#3E82FE"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="#3E82FE"
            app:tabTextColor="#ADB5C0">

            <android.support.design.widget.TabItem
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textSize="17sp" />

            <android.support.design.widget.TabItem
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="卖出"
                android:textSize="17sp" />
        </android.support.design.widget.TabLayout>
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/issue_trade_page_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>